<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <ImageView
        android:id="@+id/img_map"
        android:contentDescription="@string/title_history"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="14dp"
        android:layout_marginStart="14dp"
        android:layout_marginTop="14dp"
        android:src="@drawable/img_earth"/>

    <TextView
        android:id="@+id/txt_history_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/img_map"
        android:layout_toEndOf="@id/img_map"
        android:textColor="@color/colorAccentPink"
        android:paddingStart="14dp"
        android:paddingLeft="14dp"
        android:paddingRight="14dp"
        android:paddingEnd="14dp"
        android:textSize="16sp"
        android:layout_centerVertical="true"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/img_map"
        android:layout_marginTop="14dp"
        android:background="@color/colorDivider" />

</RelativeLayout>